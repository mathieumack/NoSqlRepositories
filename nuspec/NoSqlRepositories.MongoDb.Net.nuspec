<?xml version="1.0" encoding="utf-8"?>
 <package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>NoSqlRepositories.MongoDb.Net</id>
        <version>{BuildNumberVersion}</version>
        <title>NoSqlRepository for .net applications using mongoDb</title>
        <authors>MACK Mathieu,alexandrebalan</authors>
        <owners>MACK Mathieu,alexandrebalan</owners>
        <licenseUrl>https://github.com/mathieumack/NoSqlRepositories</licenseUrl>
        <projectUrl>https://github.com/mathieumack/NoSqlRepositories</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>This package contains a NoSqlRepository for .net apps using mongodb.</description>
        <tags>net mongodb repository</tags>
        <dependencies>
          <group>
            <!-- Always include regardless of target framework -->
            <dependency id="NoSqlRepositories.Core" version="{BuildNumberVersion}" />
            
            <dependency id="MongoDB.Bson" version="2.7.2" />
            <dependency id="MongoDB.Driver" version="2.7.2" />
            <dependency id="MongoDB.Driver.GridFS" version="2.7.2" />
        </group>
        </dependencies>  
    </metadata>
    <files>     
        <!-- ALL -->
        <file src="..\NoSqlRepositories.MongoDb.Net\bin\Release\NoSqlRepositories.MongoDb.Net.XML" target="lib\net45" />
        <file src="..\NoSqlRepositories.MongoDb.Net\bin\Release\NoSqlRepositories.MongoDb.Net.dll" target="lib\net45" />
    </files>
</package>
